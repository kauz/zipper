{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "allowJs": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "doc",
    "node_modules"
  ]
}
